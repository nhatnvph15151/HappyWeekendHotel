{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/DatePicker/index.jsx", "components/Layout/components/admin/SideBarAdmin.js", "pages/introduce/index.tsx", "components/CkEditor/index.js", "pages/admin/Chartjs/index.js"],

  "exclude": ["node_modules"]
}
